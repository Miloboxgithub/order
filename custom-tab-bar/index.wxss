.tab-bar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 70px;
  background: rgba(250, 250, 250);
  display: flex;
  flex-direction: row;
  padding-bottom: env(safe-area-inset-bottom);
  /* pointer-events: auto; */
  z-index: 1998;
}

.tab-bar-border {
  background-color: rgba(229, 229, 229, 1);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 0.5px;
  transform: scaleY(0.5);
 
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  /* justify-content: center; */
  align-items: center;
  flex-direction: column;
}

.tab-bar-item image {
  width: 30px;
  height: 30px;
  margin-top: 9px;
}

.text {
  font-size: 12px;
  margin-top: 3px;
  font-weight: 400;
  letter-spacing: 0px;
  line-height: 13.03px;

}
