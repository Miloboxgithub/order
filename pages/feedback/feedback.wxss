/* 全局样式 */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 15px;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

.header {
  text-align: center;
}

.title {
  font-size: 24px;
  color: #333;
  font-weight: bold;
}

.content {
  border-radius: 16px;
opacity: 1;
background: #FFFFFF; 
width: 94vw;
text-align: center;
}

.info, .update-log {
  margin-bottom: 20px;
}

.label {
  font-family: Alibaba PuHuiTi 3.0;
font-size: 16px;
font-weight: 500;
line-height: normal;
letter-spacing: 0em;
font-variation-settings: "opsz" auto;
color: #292722;
margin-top: 16px;
  display: block;
  margin-bottom: 8px;
}

.value {
  font-family: Alibaba PuHuiTi 3.0;
font-size: 14px;
font-weight: normal;
line-height: normal;
text-align: center;
letter-spacing: -0.3px;
font-variation-settings: "opsz" auto;
color: #3D3D3D;
  display: block;
  margin-bottom: 32px;
}

.log-items {
  margin-top: 10px;
}

.log-item {
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 4px;
}

.version-date {
  font-size: 16px;
  color: #555;
  margin-bottom: 5px;
}

.details {
  font-size: 14px;
  color: #777;
}

.check-update-btn {
  width: 100%;
  border-radius: 8px;
opacity: 1;
background: #556EFE;
box-shadow: 0px 4px 10px 0px rgba(93, 144, 250, 0.53);
  border: none;
  border-radius: 5px;
  margin-top: 20px;
  font-family: Alibaba PuHuiTi 3.0;
font-size: 16px;
font-weight: normal;
line-height: normal;
display: flex;
justify-content: center;
align-items: center;
letter-spacing: -0.3px;
font-variation-settings: "opsz" auto;
color: #FFFFFF;
width: 80vw;
height: 50px;
margin-left: 7vw;
margin-bottom: 20px;
}
