/* 全局样式 */
page {
  background-color: #f5f5f5;
}

.container {
  padding: 20px;
  font-family: 'Helvetica Neue', Arial, sans-serif;
}

.header {
  text-align: center;
  margin-bottom: 20px;
}

.title {
  font-size: 24px;
  color: #333;
  font-weight: bold;
}

.content {
  background-color: #fff;
  border-radius: 8px;
  padding: 20px;
  box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.info, .update-log {
  margin-bottom: 20px;
}

.label {
  font-size: 16px;
  color: #777;
  display: block;
  margin-bottom: 5px;
}

.value {
  font-size: 18px;
  color: #333;
}

.log-items {
  margin-top: 10px;
}

.log-item {
  margin-bottom: 10px;
  padding: 10px;
  background-color: #f9f9f9;
  border-radius: 4px;
}

.version-date {
  font-size: 16px;
  color: #555;
  margin-bottom: 5px;
}

.details {
  font-size: 14px;
  color: #777;
}

.check-update-btn {
  width: 100%;
  background: linear-gradient(135deg, #a3e6ba, #60b98a);
  color: white;
  border: none;
  padding: 10px 20px;
  font-size: 16px;
  border-radius: 5px;
  margin-top: 20px;
}